<% layout('layouts/boilerplate') %> 
    <h2>Showing All Campgrounds:</h2>
    <div><a href="/campgrounds/new">Add Campground</a>
    </div>
        <% for (const campground of campgrounds) {%>
            <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="<%= campground.image %>" class="img-fluid rounded-start" alt="">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h1 class="card-title"><%= campground.title %></h1>
                                <h2 class="card-subtitle"><%= campground.location %></h2>
                                <p class="card-text"><%= campground.description %></p>
                                <p class="card-text text-muted h4">â‚¹<%= campground.price %></p>
                                <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">View <%= campground.title %></a>
                            </div>
                        </div>
                </div>
            </div>
        <% } %>
  
